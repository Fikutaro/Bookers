<h1>Books</h1>
<table>
  
 <% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>
  <p>Body</p>
    <span><%= book.body %></span>
     <span>
       <%= link_to "show", "/books/#{book.id}" %>
       </span>
       <%= link_to "edit", edit_book_path(book) %>
       <%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
 
</table>      
    
      
<% end %>


<h1>New book</h1>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>



  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>