<html>
<body>
<h1>Books</h1>
<table>
  

  <thead>
    <tr>  
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
    </tr>
  </thead>
   
  <tbody>
   <tr>
     <% @books.each do |book| %>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to "Show", "/books/#{book.id}" %></td>
       <td><%= link_to "Edit", edit_book_path(book) %></td>
       <td id= "no-change"><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
   </tr>
   <% end %>
  </tbody>
 
</table>      
   

 
<h2>New book</h2>

<div id="error_explanation">
 <% if @book.errors.any? %>
   <h4><%= @book.errors.count %> errors prohibited this book from being saved:</h4>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  
   <% end %>
 <% end %>
</div>


<%= form_with model:@book, local:true do |f| %>

  <label>Title</label>
  <%= f.text_field :title %>



  <label>Body</label>
  <%= f.text_area :body %>

  <label>
   <%= f.submit 'Create Book' %>
  </label
<% end %>


</body>


</html>