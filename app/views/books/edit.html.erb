<h1>Editing Book</h1>

<div id="error_explanation">
 <% if @book.errors.any? %>
   <h4><%= @book.errors.count %> errors prohibited this book from being saved:</h4>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  
   <% end %>
 <% end %>
</div>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <label>Tile</label>
  <%= f.text_field :title %>
  <label>Body</label>
  <%= f.text_area :body %>
  <label>
  <%= f.submit 'Update Book' %>
  </label>
<% end %>
<div>
<%= link_to "Show","/books/#{@book.id}"%>
<%= link_to "Back", books_path %>
</div>
